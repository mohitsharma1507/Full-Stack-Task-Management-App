<% layout("/layouts/boilerplate") %>
<div class="container mt-3">
  <div class="row">
    <div class="col-md-8 offset-md-2 text-center">
      <h3 class="menu-title"><%= menu.name %></h3>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-8 offset-md-2">
      <div class="card menu-card">
        <img
          src="<%= menu.image.url %>"
          class="card-img-top show-img"
          alt="<%= menu.name %>"
        />
        <div class="card-body">
          <p class="card-text">
            <strong>Category:</strong> <%= menu.category %>
          </p>
          <p class="card-text">
            <strong>Price:</strong> &#x20B9; <%=
            menu.price.toLocaleString("en-IN") %>
          </p>
          <p class="card-text">
            <strong>Availability:</strong>
            <%= menu.availability ? "Available" : "Unavailable" %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-8 offset-md-2 d-flex justify-content-between">
      <a href="/Menu/<%= menu._id %>/edit" class="btn btn-dark edit-btn">
        Edit
      </a>
      <form method="POST" action="/Menu/<%= menu._id %>?_method=DELETE">
        <button class="btn btn-dark delete-btn">Delete</button>
      </form>
    </div>
  </div>
</div>
