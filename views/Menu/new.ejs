<% layout("/layouts/boilerplate") %>

<div class="row mt-5">
  <div class="col-8 offset-2">
    <h3 class="mb-4 text-center">Create a New Menu</h3>
    <form
      method="POST"
      action="/Menu"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="name" class="form-label">Menu Name</label>
        <input
          id="name"
          name="menu[name]"
          placeholder="Enter menu name"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Name looks good!</div>
        <div class="invalid-feedback">Please provide a valid name.</div>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <textarea
          id="category"
          name="menu[category]"
          class="form-control"
          rows="3"
          placeholder="Enter category"
          required
        ></textarea>
        <div class="invalid-feedback">Category is required.</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
          type="file"
          id="image"
          name="menu[image]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please upload an image.</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-6">
          <label for="price" class="form-label">Price</label>
          <input
            id="price"
            name="menu[price]"
            placeholder="Enter price"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <div class="mb-3 col-md-6">
          <div class="form-check mt-4">
            <input type="hidden" name="menu[availability]" value="false" />

            <button
              type="button"
              class="btn btn-success"
              id="toggleAvailability"
            >
              <%= menu.availability ? 'Set as Unavailable' : 'Set as Available'
              %>
            </button>
          </div>
        </div>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-dark add-btn">Add Menu</button>
      </div>
    </form>
  </div>
</div>

<script>
  document
    .querySelector("#toggleAvailability")
    .addEventListener("click", function () {
      const hiddenInput = document.querySelector(
        'input[name="menu[availability]"]'
      );
      if (hiddenInput.value === "false") {
        hiddenInput.value = "true";
        this.textContent = "Set as Unavailable";
        this.classList.remove("btn-success");
        this.classList.add("btn-danger");
      } else {
        hiddenInput.value = "false";
        this.textContent = "Set as Available";
        this.classList.remove("btn-danger");
        this.classList.add("btn-success");
      }
    });
</script>
